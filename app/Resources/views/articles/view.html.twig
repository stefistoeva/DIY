    {% if  app.getUser() %}
        <div class="container body-content span=2 offset=2">
            <div class="well">
                <form class="form-horizontal" action="{{ path('user_register') }}" method="post">
                    <fieldset>
                        <legend>Add comment</legend>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="comment">Comment:</label>
                            <div class="col-sm-6">
                            <textarea placeholder="Leave a comment..." class="form-control" rows="3"
                                      name="article[content]" id="comment">
                            </textarea>
                                <small>User: {{ app.getUser().getFullName() }}</small>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-4">
                                <button type="submit" name="Submit" class="btn btn-primary">Send</button>
                            </div>
                        </div>
                        {#{{ form_row(form._token) }}#}
                    </fieldset>
                </form>
